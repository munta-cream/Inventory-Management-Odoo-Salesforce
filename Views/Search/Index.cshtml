@model Inventory_Management_Requirements.Models.SearchViewModel

@{
    ViewData["Title"] = "Search Results";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-search"></i> Search Results
            </h1>

            <!-- Search Form -->
            <form asp-action="Index" method="get" class="mb-4">
                <div class="input-group input-group-lg">
                    <input type="text" name="searchTerm" value="@Model.SearchTerm"
                           class="form-control" placeholder="Search inventories and items..."
                           autocomplete="off">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchTerm))
    {
        <div class="row">
            <!-- Inventories Results -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-boxes"></i> Inventories (@Model.Inventories.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Inventories.Count() > 0)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var inventory in Model.Inventories)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <div>
                                                <h6 class="mb-1">
                                                    <a asp-controller="Inventories" asp-action="Details" asp-route-id="@inventory.Id" class="text-decoration-none">
                                                        @inventory.Title
                                                    </a>
                                                </h6>
                                                <p class="mb-1">@inventory.Description</p>
                                                <small class="text-muted">
                                                    @inventory.Items.Count items
                                                    @if (inventory.Category != null)
                                                    {
                                                        <span class="badge bg-secondary">@inventory.Category.Name</span>
                                                    }
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No inventories found matching "@Model.SearchTerm"</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Items Results -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-cube"></i> Items (@Model.Items.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Items.Count() > 0)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var item in Model.Items)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <div>
                                                <h6 class="mb-1">
                                                    <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
                                                        @item.CustomId
                                                    </a>
                                                </h6>
                                                <p class="mb-1">
                                                    @if (item.Inventory != null)
                                                    {
                                                        <small class="text-muted">in inventory "@item.Inventory.Title"</small>
                                                    }
                                                </p>
                                                <small class="text-muted">
                                                    Created by @item.CreatedBy?.UserName
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No items found matching "@Model.SearchTerm"</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Initial Search State -->
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-search fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">Search for Inventories and Items</h3>
                    <p class="text-muted">Enter a search term above to find inventories and items in the system.</p>
                </div>
            </div>
        </div>
    }
</div>
