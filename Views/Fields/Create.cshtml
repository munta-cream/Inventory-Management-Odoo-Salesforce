@model CustomField

@{
    ViewBag.Title = "Create Custom Field";
    Layout = "_Layout";
}

<h2>Create Custom Field</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="InventoryId" />
    
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<FieldType>()" class="form-control">
            <option value="">Select a field type</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    
    <div class="form-group form-check">
        <input asp-for="ShowInTableView" class="form-check-input" />
        <label asp-for="ShowInTableView" class="form-check-label"></label>
    </div>
    
    <div class="form-group form-check">
        <input asp-for="IsRequired" class="form-check-input" />
        <label asp-for="IsRequired" class="form-check-label"></label>
    </div>
    
    <div class="form-group">
        <label asp-for="ValidationRegex" class="control-label"></label>
        <input asp-for="ValidationRegex" class="form-control" />
        <span asp-validation-for="ValidationRegex" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="MaxLength" class="control-label"></label>
        <input asp-for="MaxLength" class="form-control" />
        <span asp-validation-for="MaxLength" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="MinValue" class="control-label"></label>
        <input asp-for="MinValue" class="form-control" />
        <span asp-validation-for="MinValue" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="MaxValue" class="control-label"></label>
        <input asp-for="MaxValue" class="form-control" />
        <span asp-validation-for="MaxValue" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" asp-route-inventoryId="@Model.InventoryId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
