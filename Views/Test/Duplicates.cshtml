@{
    ViewData["Title"] = "Check for Duplicate Users";
}

<h1>Duplicate Users Check</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @ViewBag.Error
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Database Statistics</h5>
            </div>
            <div class="card-body">
                <p><strong>Total Users:</strong> @ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.DuplicateEmails != null && ViewBag.DuplicateEmails.Count > 0)
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5>Duplicate Emails Found</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Found duplicate email addresses. This can cause registration confirmation issues.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Count</th>
                                    <th>User IDs</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var duplicate in ViewBag.DuplicateEmails)
                                {
                                    <tr>
                                        <td>@duplicate.Email</td>
                                        <td>@duplicate.Count</td>
                                        <td>@string.Join(", ", duplicate.UserIds)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <a href="@Url.Action("CleanDuplicates", "Test")" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to clean up duplicate users? This will delete duplicate records keeping only the first one for each email.')">
                            <i class="fas fa-trash"></i> Clean Up Duplicates
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success">
                    <h5>Email Duplicates</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> No duplicate email addresses found.
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.DuplicateUserNames != null && ViewBag.DuplicateUserNames.Count > 0)
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5>Duplicate UserNames Found</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Found duplicate usernames. This can cause login issues.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Count</th>
                                    <th>User IDs</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var duplicate in ViewBag.DuplicateUserNames)
                                {
                                    <tr>
                                        <td>@duplicate.UserName</td>
                                        <td>@duplicate.Count</td>
                                        <td>@string.Join(", ", duplicate.UserIds)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success">
                    <h5>Username Duplicates</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> No duplicate usernames found.
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-md-12">
        <a href="@Url.Action("Index", "Test")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Test Page
        </a>
        <a href="@Url.Action("CheckDuplicates", "Test")" class="btn btn-primary ml-2">
            <i class="fas fa-refresh"></i> Refresh Check
        </a>
    </div>
</div>
