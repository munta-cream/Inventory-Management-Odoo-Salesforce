@model Inventory_Management_Requirements.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h2>Delete User</h2>
    
    <h3>Are you sure you want to delete this user?</h3>
    
    <div>
        <h4>User Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Username</dt>
            <dd class="col-sm-10">@Model.UserName</dd>
            
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            
            <dt class="col-sm-2">Is Admin</dt>
            <dd class="col-sm-10">@Model.IsAdmin</dd>
            
            <dt class="col-sm-2">Is Blocked</dt>
            <dd class="col-sm-10">@Model.IsBlocked</dd>
        </dl>
        
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
