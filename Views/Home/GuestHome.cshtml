@model dynamic
@{
    ViewData["Title"] = "Inventory Management System";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Professional Inventory Management
                </h1>
                <p class="lead mb-4">
                    Organize, track, and manage your inventory with custom fields, advanced search, and collaborative features.
                    Perfect for businesses, collectors, and organizations of all sizes.
                </p>
                <div class="d-flex gap-3">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg">
                        <i class="fas fa-user-plus"></i> Get Started Free
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-boxes fa-10x text-white-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="container py-5">
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="stat-card">
                <i class="fas fa-boxes fa-3x text-primary mb-3"></i>
                <h2 class="fw-bold">@Model.TotalInventories</h2>
                <p class="text-muted">Active Inventories</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <i class="fas fa-cube fa-3x text-success mb-3"></i>
                <h2 class="fw-bold">@Model.TotalItems</h2>
                <p class="text-muted">Items Tracked</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <i class="fas fa-tags fa-3x text-info mb-3"></i>
                <h2 class="fw-bold">@Model.Categories.Count</h2>
                <p class="text-muted">Categories</p>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold">Powerful Features</h2>
                <p class="lead text-muted">Everything you need to manage your inventory effectively</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-id-card fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Custom ID Generation</h5>
                        <p class="card-text">Create unique identifiers with custom formats including text, numbers, dates, and sequences.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-search fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Advanced Search</h5>
                        <p class="card-text">Find items instantly with powerful search across all inventories and custom fields.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Collaboration</h5>
                        <p class="card-text">Share inventories with team members and control access permissions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-list fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Custom Fields</h5>
                        <p class="card-text">Add any fields you need with support for text, numbers, dates, and documents.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-cloud fa-3x text-danger mb-3"></i>
                        <h5 class="card-title">Cloud Storage</h5>
                        <p class="card-text">Secure file storage with automatic optimization and fast access worldwide.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar fa-3x text-secondary mb-3"></i>
                        <h5 class="card-title">Analytics</h5>
                        <p class="card-text">Track inventory performance with detailed statistics and export capabilities.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Inventories Section -->
@if (Model.RecentInventories.Count > 0)
{
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold">Recent Inventories</h2>
                <p class="lead text-muted">See what others are organizing</p>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var inventory in Model.RecentInventories)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                        {
                            <img src="@inventory.ImageUrl" class="card-img-top" alt="@inventory.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-box fa-4x text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@inventory.Title</h5>
                            <p class="card-text text-muted">@inventory.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    by @inventory.CreatedBy?.UserName
                                </small>
                                @if (inventory.Category != null)
                                {
                                    <span class="badge bg-primary">@inventory.Category.Name</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Categories Section -->
@if (Model.Categories.Count > 0)
{
    <div class="bg-light py-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12 text-center">
                    <h2 class="display-5 fw-bold">Popular Categories</h2>
                    <p class="lead text-muted">Organize your inventory by category</p>
                </div>
            </div>

            <div class="row g-3">
                @foreach (var category in Model.Categories)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="card border-0 shadow-sm text-center h-100">
                            <div class="card-body">
                                <i class="fas fa-tag fa-2x text-primary mb-3"></i>
                                <h6 class="card-title">@category.Name</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- CTA Section -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-4">Ready to Get Started?</h2>
        <p class="lead mb-4">
            Join thousands of users who trust our platform for their inventory management needs.
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg">
                <i class="fas fa-rocket"></i> Start Free Trial
            </a>
            <a href="#features" class="btn btn-outline-light btn-lg">
                <i class="fas fa-info-circle"></i> Learn More
            </a>
        </div>
    </div>
</div>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 60vh;
}

.stat-card {
    padding: 2rem 0;
}

.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-5px);
}
</style>
