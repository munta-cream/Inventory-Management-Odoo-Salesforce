@model IEnumerable<Inventory_Management_Requirements.Models.Item>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Custom ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Weight</th>
            <th>In Stock</th>
            <th>Fragile</th>
            <th>Perishable</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Brand</td>
                <td>@item.Model</td>
                <td>@item.Quantity</td>
                <td>@(item.Price.HasValue ? item.Price.Value.ToString("C") : "")</td>
                <td>@(item.Weight.HasValue ? item.Weight.Value.ToString("F2") : "")</td>
                <td>@(item.InStock ? "Yes" : "No")</td>
                <td>@(item.Fragile ? "Yes" : "No")</td>
                <td>@(item.Perishable ? "Yes" : "No")</td>
                <td>@item.CreatedBy?.UserName</td>
                <td>
                    <a href="@Url.Action("Edit", "Items", new { id = item.Id })" class="btn btn-sm btn-outline-secondary edit-item-btn"
                       data-item-id="@item.Id"
                       data-name="@item.Name"
                       data-description="@item.Description"
                       data-brand="@item.Brand"
                       data-model="@item.Model"
                       data-quantity="@item.Quantity"
                       data-price="@item.Price"
                       data-weight="@item.Weight"
                       data-instock="@item.InStock"
                       data-fragile="@item.Fragile"
                       data-perishable="@item.Perishable"
                    >Edit</a>
                    <a href="@Url.Action("Delete", "Items", new { id = item.Id })" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
